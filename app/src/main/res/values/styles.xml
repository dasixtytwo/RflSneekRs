<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorUnFilled</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/title_color</item>
  </style>

  <!--Customize Toolbar Header-->
  <style name="HeaderBar">
    <item name="android:background">#FFFFFF</item>
  </style>

  <style name="CustomViewAllTab" parent="@android:style/TextAppearance.Widget.TabWidget">
    <item name="android:textSize">16dp</item>
    <item name="android:fontFamily">@font/barlow_condensed_semibold</item>
  </style>
</resources>